{
  "apply":[
    {
      "source": "extension",
      "key": "page",
      "action": "bind",
      "type": "boolean",
      "apply": [
          {
              "on": "scroll:speed:-80",
              "default": false,
              "value": true,
              "tag": "exit.mobile"
          },
          {
              "on": "mouseexit:top:100",
              "default": false,
              "value": true,
              "tag": "exit.desktop"
          },
          {
              "on": "idle:60000",
              "default": false,
              "value": true,
              "tag": "exit.all"
          }
      ]
    }
  ]
}
